rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /Posts/{docId} {
      allow read: if true;
      allow write: if request.resource.data.keys().hasOnly([
        'mediaUrl', 'mediaType', 'authorName', 'authorId', 'description', 'likes', 'likesWeek', 'timestamp', 'boostScore', 'creditValue', 'boostPurchased'
      ]);
    }

    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.resource.data.keys().hasOnly(['postId', 'authorName', 'text', 'timestamp']);
    }

    match /likePackages/{packageId} {
      allow read: if true;
      allow write: if false;
    }

    match /transactions/{transactionId} {
      allow read: if true;
      allow write: if request.resource.data.keys().hasOnly(['userId', 'postId', 'likeCount', 'boostAmount', 'pricePaid', 'paypalTxId', 'type', 'timestamp']);
    }

    match /wallets/{walletId} {
      allow read, write: if true;
    }
  }
}
